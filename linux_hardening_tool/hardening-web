#!/bin/bash
###############################################################################
# Linux Hardening Tool - Web GUI Launcher
# Easy-to-use wrapper for the Flask web application
###############################################################################

# Get script directory
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
CYAN='\033[0;36m'
BOLD='\033[1m'
NC='\033[0m'

# Banner
clear
echo -e "${CYAN}${BOLD}================================================================${NC}"
echo -e "${CYAN}${BOLD}      üîí Linux System Hardening Tool - Web Interface${NC}"
echo -e "${CYAN}${BOLD}================================================================${NC}"
echo ""

# Check if web app exists
if [ ! -f "$SCRIPT_DIR/complete_unified_app.py" ]; then
    echo -e "${RED}[ERROR]${NC} complete_unified_app.py not found!"
    echo -e "${GREEN}[INFO]${NC}  Please run: sudo python3 install.py"
    echo ""
    exit 1
fi

# Check Python dependencies
echo -e "${BLUE}[CHECK]${NC} Verifying dependencies..."

python3 -c "import flask" 2>/dev/null
if [ $? -ne 0 ]; then
    echo -e "${YELLOW}[WARN]${NC} Flask not installed!"
    echo -e "${GREEN}[INFO]${NC} Installing Flask..."
    pip3 install Flask werkzeug -q
fi

python3 -c "import paramiko" 2>/dev/null
if [ $? -ne 0 ]; then
    echo -e "${YELLOW}[WARN]${NC} Paramiko not installed (remote features disabled)"
    echo -e "${GREEN}[INFO]${NC} To enable remote control: pip3 install paramiko"
fi

echo ""

# Check privileges
if [ "$EUID" -eq 0 ]; then
    echo -e "${GREEN}[‚úì]${NC} ${BOLD}Running with ROOT privileges${NC}"
    echo -e "    Full features available: ${GREEN}Scan + Fix + Rollback${NC}"
else
    echo -e "${YELLOW}[!]${NC} ${BOLD}Running WITHOUT root privileges${NC}"
    echo -e "    Limited features: ${YELLOW}Scan only (Fix/Rollback disabled)${NC}"
    echo ""
    echo -e "${CYAN}[TIP]${NC} For full features, run: ${GREEN}sudo ./hardening-web${NC}"
    echo ""
    read -p "Continue anyway? [y/N]: " -n 1 -r
    echo ""
    if [[ ! $REPLY =~ ^[Yy]$ ]]; then
        echo -e "${BLUE}[INFO]${NC} Exiting. Run with sudo for full features."
        exit 1
    fi
fi

echo ""
echo -e "${CYAN}${BOLD}================================================================${NC}"
echo -e "${GREEN}[‚úì]${NC} Starting web server..."
echo ""
echo -e "${BOLD}Access Information:${NC}"
echo -e "  ${CYAN}URL:${NC}      ${GREEN}http://localhost:5000${NC}"
echo -e "  ${CYAN}Username:${NC} ${YELLOW}admin${NC}"
echo -e "  ${CYAN}Password:${NC} ${YELLOW}changeme123${NC}"
echo ""
echo -e "${RED}${BOLD}‚ö†Ô∏è  IMPORTANT:${NC} Change the default password in ${YELLOW}.env${NC} file!"
echo ""
echo -e "${CYAN}${BOLD}================================================================${NC}"
echo ""
echo -e "${BLUE}[INFO]${NC} Press ${RED}Ctrl+C${NC} to stop the server"
echo ""

# Load environment variables if .env exists
if [ -f "$SCRIPT_DIR/.env" ]; then
    export $(grep -v '^#' "$SCRIPT_DIR/.env" | xargs)
fi

# Change to script directory
cd "$SCRIPT_DIR" || exit 1

# Start the Flask application
exec python3 complete_unified_app.py
